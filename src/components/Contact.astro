<section class="contact" id="contact">
  <div class="container">
    <div class="section-title">
      <h2>Contatti e Orari</h2>
    </div>
    <div class="contact-container">
      <div class="contact-info">
        <div class="info-item">
          <div class="info-icon">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <div>
            <h3>Indirizzo</h3>
            <p>Via dei Dolci, 123<br>00100 Roma, Italia</p>
          </div>
        </div>
        
        <div class="info-item">
          <div class="info-icon">
            <i class="fas fa-phone-alt"></i>
          </div>
          <div>
            <h3>Telefono</h3>
            <p>+39 06 1234567</p>
          </div>
        </div>
        
        <div class="info-item">
          <div class="info-icon">
            <i class="fas fa-envelope"></i>
          </div>
          <div>
            <h3>Email</h3>
            <p>info@dolcevita.it</p>
          </div>
        </div>
        
        <div class="info-item">
          <div class="info-icon">
            <i class="fas fa-globe"></i>
          </div>
          <div>
            <h3>Social</h3>
            <div class="social-links">
              <a href="#"><i class="fab fa-facebook-f"></i></a>
              <a href="#"><i class="fab fa-instagram"></i></a>
              <a href="#"><i class="fab fa-twitter"></i></a>
            </div>
          </div>
        </div>
      </div>
      
      <div class="hours">
        <h3>Orari di Apertura</h3>
        <ul class="hours-list">
          <li>
            <span>Lunedì - Venerdì</span>
            <span>7:00 - 20:00</span>
          </li>
          <li>
            <span>Sabato</span>
            <span>7:00 - 22:00</span>
          </li>
          <li>
            <span>Domenica</span>
            <span>8:00 - 13:00</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>