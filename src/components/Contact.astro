<section class="contact" id="contact">
  <div class="container">
    <div class="section-title">
      <h2>Contatti e Orari</h2>
    </div>
    <div class="contact-container">
      <div class="contact-info">
        <a href="#storia" class="info-item contact-link location-link" onclick="document.querySelector('.map-container').scrollIntoView({behavior: 'smooth'})">
          <div class="info-icon">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <div>
            <h3>Indirizzo</h3>
            <p>Via dei Dolci, 123<br>00100 Roma, Italia</p>
          </div>
        </a>
        <a href="tel:+390612345678" class="info-item contact-link">
          <div class="info-icon">
            <i class="fas fa-phone-alt"></i>
          </div>
          <div>
            <h3>Telefono</h3>
            <p>+39 06 1234567</p>
          </div>
        </a>
        <a href="mailto:info@dolcevita.it" class="info-item contact-link">
          <div class="info-icon">
            <i class="fas fa-envelope"></i>
          </div>
          <div>
            <h3>Email</h3>
            <p>info@dolcevita.it</p>
          </div>
        </a>
      </div>
      <div class="hours">
        <h3>Orari di Apertura</h3>
        <ul class="hours-list">
          <li>
            <span>Lunedì - Venerdì</span>
            <span>7:00 - 20:00</span>
          </li>
          <li>
            <span>Sabato</span>
            <span>7:00 - 22:00</span>
          </li>
          <li>
            <span>Domenica</span>
            <span>8:00 - 13:00</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>