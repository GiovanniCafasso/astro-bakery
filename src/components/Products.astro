---
// src/components/Products.astro
const specialita = [
  {
    nome: "Cannoli Siciliani",
    descrizione: "I nostri famosi cannoli con croccante cialda arrotolata e ripieno di crema di ricotta fresca, aromatizzata con scorzette d'arancia e gocce di cioccolato.",
    immagine: "/cannoli.jpg"
  },
  {
    nome: "Millefoglie Classica",
    descrizione: "Strati sottili di pasta sfoglia caramellata alternati a delicata crema chantilly e decorati con frutta fresca di stagione.",
    immagine: "/millefoglie.jpg"
  },
  {
    nome: "Macaron Assortiti",
    descrizione: "Delicati gusci di meringa alle mandorle con vari ripieni: dal classico cioccolato fondente alle più innovative combinazioni come lampone e rosa.",
    immagine: "/macaron.jpg"
  },
  {
    nome: "Tiramisù Tradizionale",
    descrizione: "Savoiardi inzuppati nel caffè espresso, alternati a strati di crema al mascarpone, con una leggera spolverata di cacao amaro.",
    immagine: "/tiramisu.jpg"
  },
  {
    nome: "Torta Sacher",
    descrizione: "La classica torta al cioccolato con uno strato di marmellata di albicocche e una glassa al cioccolato fondente.",
    immagine: "/sacher.jpg"
  },
  {
    nome: "Cheesecake ai Frutti di Bosco",
    descrizione: "Una base croccante di biscotti, una crema al formaggio morbida e una golosa copertura di frutti di bosco freschi.",
    immagine: "/cheesecake.jpg"
  },
  {
    nome: "Profiteroles",
    descrizione: "Piccoli bignè ripieni di crema pasticcera e ricoperti di cioccolato fondente.",
    immagine: "/profiteroles.jpg"
  },
  {
    nome: "Torta della Nonna",
    descrizione: "Una base di pasta frolla, crema pasticcera e una spolverata di pinoli tostati.",
    immagine: "/torta-nonna.jpg"
  }
];
---

<section class="products" id="products">
  <div class="container">
    <div class="section-title">
      <h2>I Nostri Dolci</h2>
    </div>
    <div class="products-grid">
      {specialita.map(dolce => (
        <div class="product-card">
          <div class="product-image">
            <img src={dolce.immagine} alt={dolce.nome} />
          </div>
          <div class="product-info">
            <h3>{dolce.nome}</h3>
            <p>{dolce.descrizione}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>