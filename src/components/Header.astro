---
// src/components/Header.astro
---

<header>
  <div class="container">
    <nav x-data="{ mobileMenuOpen: false }" @click.away="mobileMenuOpen = false">
      <div class="logo">Enrico Nel Forno</div>
      <ul class="nav-links" :class="{ 'active': mobileMenuOpen }">
        <li><a href="#home" @click="mobileMenuOpen = false">Home</a></li>
        <li><a href="#storia" @click="mobileMenuOpen = false">Storia</a></li>
        <li><a href="#products" @click="mobileMenuOpen = false">Prodotti</a></li>
        <li><a href="#contact" @click="mobileMenuOpen = false">Contatti</a></li>
      </ul>
      <button class="mobile-menu-btn" @click="mobileMenuOpen = !mobileMenuOpen" aria-label="Menu">
        <i class="fas fa-bars"></i>
      </button>
    </nav>
  </div>
</header>